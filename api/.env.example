# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Database connection string or file path
# For SQLite (recommended for development):
DATABASE_ENTRY="./db/auth.db"
# For PostgreSQL (production):
# DATABASE_ENTRY="postgres://username:password@localhost:5432/chronos"

# Encryption key for frontend-backend communication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="your-32-byte-hex-encryption-key-here"

# Secret key for signing API tokens (JWT)
JWT_SECRET="your-jwt-secret-key-here"

# ==============================================================================
# AUTHENTICATION (Better Auth)
# ==============================================================================
# Documentation: https://www.better-auth.com/docs/installation#set-environment-variables

# Secret key for better-auth session encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NOTE: This is different from ENCRYPTION_KEY above
BETTER_AUTH_SECRET="your-better-auth-secret-key-here"

# Base URL where your API is hosted
# Development:
BETTER_AUTH_URL="http://localhost:3000"
# Production example:
# BETTER_AUTH_URL="https://api.yourdomain.com"

# ==============================================================================
# API SETTINGS
# ==============================================================================

# Port number for the API server
PORT=3000

# Disable new user registrations (set to true in production if needed)
DISABLE_REGISTRATION=false

# Allowed origin for CORS (your frontend URL)
CLIENT_ORIGIN="http://localhost:4480"

# ==============================================================================
# OPTIONAL SERVICES
# ==============================================================================

# Qlty.sh coverage token (only needed for CI/CD)
# Leave empty if not using Qlty
QLTY_COVERAGE_TOKEN=""