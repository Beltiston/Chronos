{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["ES2024"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src"],
  "exclude": ["dist", "scripts"]
}
