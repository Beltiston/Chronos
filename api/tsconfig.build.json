{
  "compilerOptions": {
    "target": "es2024",
    "lib": [
      "ES2024"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "composite": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "scripts",
    "node_modules"
  ],
}