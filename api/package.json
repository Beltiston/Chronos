{
  "name": "chronos",
  "version": "0.1.2",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "preinstall": "npx --yes only-allow pnpm",
    "preupdate": "npx --yes only-allow pnpm",
    "build": "tsc -p tsconfig.build.json",
    "db": "dotenvx run -- tsx scripts/database.ts",
    "db:create": "dotenvx run -- tsx scripts/database.ts create",
    "db:migrate": "dotenvx run -- tsx scripts/database.ts migrate",
    "dev": "dotenvx run -- nodemon --watch src --ext ts,tsx --exec tsx -r tsconfig-paths/register src/index.ts",
    "start": "node -r tsconfig-paths/register dist/src/index.js",
    "release": "commit-and-tag-version",
    "test": "vitest",
    "test:nix": "vitest run __test__/nix",
    "test:unit": "vitest run __test__ --exclude **/nix/**"
  },
  "keywords": [],
  "author": "",
  "license": "LGPL-3.0-or-later",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.2",
    "@hono/node-server": "^1.19.7",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.6",
    "better-sqlite3": "^12.5.0",
    "hono": "^4.10.8",
    "kysely": "^0.28.8",
    "nanoid": "^5.1.6",
    "nodemon": "^3.1.11",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.1",
    "commit-and-tag-version": "^12.6.1",
    "pino-pretty": "^13.1.3",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "commit-and-tag-version": {
    "output": "../CHANGELOG.md",
    "types": [
      {
        "type": "feat",
        "section": "‚ú® Features"
      },
      {
        "type": "fix",
        "section": "üêõ Fixes"
      },
      {
        "type": "docs",
        "section": "üìù Documentation"
      },
      {
        "type": "refactor",
        "section": "‚öôÔ∏è Refactor"
      },
      {
        "type": "perf",
        "section": "‚ö° Performance"
      },
      {
        "type": "test",
        "section": "üß™ Test"
      },
      {
        "type": "chore",
        "section": "üîß Chores"
      },
      {
        "type": "ci",
        "section": "ü§ñ Integration",
        "hidden": true
      }
    ],
    "commitUrlFormat": "https://github.com/Beltiston/Chronos/commit/{{hash}}",
    "compareUrlFormat": "https://github.com/Beltiston/Chronos/compare/{{previousTag}}...{{currentTag}}",
    "issueUrlFormat": "https://github.com/Beltiston/Chronos/issue/{{id}}"
  }
}
